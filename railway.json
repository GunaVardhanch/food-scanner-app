{
    "$schema": "https://railway.app/railway.schema.json",
    "services": {
        "frontend": {
            "source": {
                "directory": "frontend"
            },
            "build": {
                "builder": "NIXPACKS"
            },
            "deploy": {
                "numReplicas": 1,
                "sleepOnIdle": false
            }
        },
        "backend": {
            "source": {
                "directory": "backend"
            },
            "build": {
                "builder": "DOCKER",
                "dockerfilePath": "Dockerfile"
            },
            "deploy": {
                "numReplicas": 1,
                "sleepOnIdle": false,
                "restartPolicyType": "ON_FAILURE"
            }
        }
    }
}